{% extends 'base.html.twig'%}
{% block title %}Contact!{% endblock %}
{% block body %}
    <div class='text-center' id='margT3'>
        <h1>Contacter nous :</h1>
    </div>
    {{form_start(form)}}
    <div class='container' id='CadreContact;'>
        <div class='row justify-content-center' id='margContainer'>
            <div class='col-md-3'>
                {{form_row(form.lastname)}}
            </div>
            <div class='col-md-3'>
                {{form_row(form.firstname)}}
            </div>
        </div>
        <div class='row justify-content-center' id='margT5'>
            <div class='col-md-3'>
                {{form_row(form.email)}}
            </div>
            <div class='col-md-3'>
                {{form_row(form.sujet)}}
            </div>
        </div>
        <div class='row justify-content-center' id='margT5'>
            <div class='col-md-10'>
                {{form_row(form.message)}}
            </div>
        </div>
        <div class='text-center' id='margT5'>
            <button class="btn btn-dark">Envoyer</button>
        </div>
    </div>
    {{form_end(form)}}
{% endblock %}