{% extends 'base.html.twig'%}

{% block title 'Se connecter' %}

{% block body %}
<form method="POST">
    <div class='text-center' style='margin-top: 5%;'>
        <h1>Connexion</h1>
        <p>Veuillez entrer votre nom de compte et votre mot de passe ci-dessous</p> 
    </div>
    {% if error %}
    <div class="container">
        <div class="alet alert-danger">
            {{ error.messageKey }}
        </div>
    </div>      
    {% endif %}
    <div class="container" style='margin-top: 5%;'>
        <div class="row justify-content-center">
            <div class="col-md-3">
                <label for="Login"><B>&nbsp;Nom de compte :</B></label>
                <input type="text" class="form-control" id="username" name="_username" value="{{lastUsername}}">
            </div>
            <div class="col-md-3">
                <label for="Password"><B>&nbsp;Mot de passe :</B></label>
                <input type="password" class="form-control" id="password" name="_password">
            </div>    
        </div>
    </div>
    <div class="text-center" style='margin-top: 5%;'>
        <button type="submit" class="btn btn-dark">Se connecter</button>
    </div>
</form>
{% endblock %}