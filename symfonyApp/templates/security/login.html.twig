{% extends 'base.html.twig'%}

{% block title 'Se connecter' %}

{% block body %}
<form action="{{path('app_login')}}" method="post">
    <div class='text-center' id='margT5'>
        <h1>Connexion</h1>
        <p>Veuillez entrer votre nom de compte et votre mot de passe ci-dessous</p> 
    </div>
    {% if error %}
    <div class="container">
        <div class="alert alert-danger">
            {{error.messageKey|trans(error.messageData, 'security')}}
        </div>
    </div>
    {% endif %}

    <div class="container" id='margT5'>
        <div class="row justify-content-center">
            <div class="col-md-3">
                <label for="Login"><B>&nbsp;Nom de compte :</B></label>
                <input type="text" class="form-control" id="inputlogin" name="login" value="{{last_username}}"required autofocus>
            </div>
            <div class="col-md-3">
                <label for="mdp"><B>&nbsp;Mot de passe :</B></label>
                <input type="password" class="form-control" id="inputPassword" name="password" required>
            </div>    
        </div>
    </div>
    <div class="text-center" id='margT5'>
        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >
        <button type="submit" class="btn btn-dark">Se connecter</button>
    </div>
</form>
{% endblock %}