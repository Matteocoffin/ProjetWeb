{{form_start(form)}}
    <div class='container'>
        <div class='row' id='margContainer'>
        <h3> Offre :</h3>
            <div class='col-md-13' id='CadreColor'>
                <div class='row'>
                    <div class='col-md-6'>
                        {{form_row(form.debutStage)}}    
                    </div>
                    <div class='col-md-6'>
                        {{form_row(form.finStage)}}
                    </div>
                </div>
                <div class='row' id='margT2'>
                    <div class='col-md-3'>
                        {{form_row(form.Titre)}}
                    </div>
                    <div class='col-md-2'>
                        {{form_row(form.nbPlace)}}
                    </div>
                    <div class='col-md-3'>
                        {{form_row(form.idEntreprise)}}
                    </div>
                    <div class='col-md-3'>
                        {{form_row(form.remuneration)}}
                    </div>
                </div>
                <div class='row' id='margT2'>
                    <div class='col-md-12'>
                        {{form_row(form.description)}}
                    </div>
                </div>
                <div class='row'>
                    <div class='text-center' id='margT3'>
                        <button type="submit" class="btn btn-dark">{{button|default("Créer")}}</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{form_end(form)}}
{{form_start(formCompetence)}}
    <div class='container'>
        <div class='row' id='margContainer'>
        <h3>Ajouter Compétences :</h3>
            <div class='col-md-13' id='CadreColor'>
                <div class='row'>
                    <div class='col-md-6'>
                        {{form_row(formCompetence.competences)}}
                    </div>
                </div>
                <div class='row' id='margT2'>
                    
                    <div class='col-md-6'>
                        {{form_row(formCompetence.idOffre)}}
                    </div>
                </div>
                <div class='row'>
                    <div class='text-center' id='margT3'>
                        <button type="submit" class="btn btn-dark">Ajouter</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{form_end(formCompetence)}}