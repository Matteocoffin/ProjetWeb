{% extends 'base.html.twig'%}

{% block body %}
<div class="container" style="margin-top:5%;">
    <div class="row">
        <div class="col-md-3">
            {{ form_start(formSearch) }}
                <label for="ID">Recherche d'un étudiant ?</label>
                {{form_row(formSearch.s)}}
                <label for="ID">Choix De la promo ?</label>
                {{form_row(formSearch.SearchPromo)}}
                <label for="ID">Choix Du centre ?</label>
                {{form_row(formSearch.SearchCentre)}}
                <div style="margin-top:3%;">
                    <label for="Etudiant">Filtre :</label>
                    <button class="btn btn-dark">Filtrer</button>
                </div>
                
            {{ form_end(formSearch) }}
        </div>
        <div class="col-md-9">
            <div class="table-responsive">
                <table class="table table-light">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Nom</th>
                            <th scope="col">Prénom</th>
                            <th scope="col">Login</th>
                            <th scope="col">Email</th>
                            <th scope="col">Centre</th>
                            <th scope="col">Promo</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for Utilisateur in Utilisateur %}
                    <tr>
                        <th scope="row">{{Utilisateur.idUtilisateur}}</th>
                        <td>{{Utilisateur.Nom}}</td>
                        <td>{{Utilisateur.Prenom}}</td>
                        <td>{{Utilisateur.login}}</td>
                        <td>{{Utilisateur.Email}}</td>
                        <td>{{Utilisateur.idCentre}}</td>
                        <td>{{Utilisateur.idPromo}}</td></th>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <div class='d-flex justify-content-center' style='margin-top: 5%;'>
                    {{ knp_pagination_render(Utilisateur)}}
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}