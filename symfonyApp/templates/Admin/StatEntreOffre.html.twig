{% extends 'base.html.twig'%}
{% block title %}Statistique Offre/Entreprise!{% endblock %}
{% block body %}
<div class="container" id='margT5'>
    <div class="row">
        <div class="col-md-3">
            {{ form_start(form) }}
                <label for="ID">Recherche d'une offre ?</label>
                {{form_row(form.s)}}
                <label for="region">Choix de la région?</label>
                {{form_row(form.Searchlocalite)}}
                <label for="Competence">Choix de la competence?</label>
                {{form_row(form.SearchCompetences)}}
                <label for="Entreprise">Choix de l'entreprise?</label>
                {{form_row(form.SearchEntreprise)}}
                <div class='col-md-10'>
                        <div class='row'>
                        <label for="remuneration">Remuneration ?</label>
                        <div class='col-md-5'>
                            {{form_row(form.max)}}
                        </div>
                        <div class='col-md-5'>
                            {{form_row(form.min)}}
                        </div>
                        </div>
                    </div>
                <div id='margT3'>
                    <label for="Etudiant">Filtre :</label>
                    <button class="btn btn-dark">Filtrer</button>
                </div>
                
            {{ form_end(form) }}
        </div>
        <div class="col-md-9">
            <div class="table-responsive">
                <table class="table table-light">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Company</th>
                            <th scope="col">Titre</th>
                            <th scope="col">Compétences</th>
                            <th scope="col">Description</th>
                            <th scope="col">Location</th>
                            <th scope="col">Remuneration</th>
                            <th scope="col">Wish-list</th>
                            <th scope="col">Supprimer</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for offre in Offre %}
                    <tr>
                        <th scope="row">{{offre.IdOffre}}</th>
                        <td><a href="{{path('voiroffre',{id: offre.IdOffre, slug: offre.slug})}}">{{offre.idEntreprise}}<a></td>
                        <td>{{offre.titre}}</td>
                        
                        <td>{% for d in offre.idCompetences %}{{d.Competences}}/{% endfor %}</td>
                        <td>{{offre.Description}}</td>
                        <td>{% for g in offre.idEntreprise.idLocalite %}{{g.region}}/ {% endfor %}</td>
                        <td>{{offre.remuneration}}</td>
                        <td><input class="form-check-input" type="checkbox" value="" id="flexCheckDefault"></td>
                        <td><i class="fas fa-times fa-2x"></i></td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
                </div>
            </div>
        </div>
    </div>
    <div class='d-flex justify-content-center' id='margT5'>
        {{ knp_pagination_render(Offre)}}
    </div>

{% endblock %}